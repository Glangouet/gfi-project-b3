{% extends "GfiBundle:Gfi:layout.html.twig" %}

{% block content %}

    <h1>Admin: User list</h1>
    <hr>

    <table class="table table-responsive table-dashed">
        <thead>
        <th>Username</th>
        <th>Name</th>
        <th>First Name</th>
        <th>Email</th>
        <th>phone</th>
        <th>localisation</th>
        <th>roles</th>
        <th>Edit</th>
        <th>Delete</th>
        </thead>
        {% for user in users %}
            <tbody>
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.localisation }}</td>
                <td>
                    {% for role in user.roles %}
                        {{ role }}
                    {% endfor %}
                </td>
                <td><a class="btn btn-warning">Edit</a></td>
                <td><a class="btn btn-danger">Delete</a></td>
            </tr>
            </tbody>
        {% endfor %}
    </table>
{% endblock %}
