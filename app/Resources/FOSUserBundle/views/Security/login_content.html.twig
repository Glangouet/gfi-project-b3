{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<style>
    html, body {height:100%;}
    html {width:100%;}
    body {background-image: linear-gradient(white, grey); text-align: center}
</style>

<div class="container" style="height:100%">
    
    <div class="logoLogGfi photo">
        <img src="{{ asset('bundles/gfi/img/gfiLogo.png') }}" class="logoLogGfi">
    </div>

    <div class="col-sm-10 offset-sm-1 details">
        <form action="{{ path("fos_user_security_check") }}" method="post" name="logForm">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="fa fa-envelope" aria-hidden="true"></i></span>
                        <input id="username" required placeholder="Email" class="form-control" name="_username" ng-model="user.mail" pattern="[\w0-9\.-]*@gfi\.com" ng-class="{'is-invalid': logForm._username.$invalid && logForm._username.$dirty}" 
                        />
                    </div>

                    <div class="input-group">
                        <span class="input-group-addon" style="min-width:41px; "><i class="fa fa-lock" style="margin: auto;" aria-hidden="true"></i></span>
                        <input id="password" required placeholder="Password" class="form-control" name="_password" ng-model="user.password" type="password" ng-class="{'is-invalid': user._password.length === 0}" />
                    </div>
                         <button type="submit" class="btn form-group" id="_submit" name="_submit" ng-disabled="logForm.$invalid || logForm.$pristine" style="margin-top: 1vh; background-color:lightgrey">
                            Se connecter
                         </button>
                     
                </div>
            </div>
        </form>
    </div>
   
</div>